# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/giftlist

# Admin Authentication
ADMIN_PASSWORD_HASH=$2a$10$placeholder.hash.change.this.before.using.in.production
# Generate with: node -e "const bcrypt = require('bcryptjs'); console.log(bcrypt.hashSync('your-password', 10));"

# Admin Email Addresses (comma-separated list of allowed admin emails)
ADMIN_EMAILS=admin@example.com,another-admin@example.com

# JWT Secret for admin sessions
JWT_SECRET=your-jwt-secret-here-change-this

# Email Configuration (for OTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Application URL (for email links)
APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
